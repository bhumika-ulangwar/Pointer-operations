#include <iostream>
using namespace std;

void swap(int &x, int &y) {

int temp = x;
x = y;
y = temp;

}

int main() {
int a, b;

cout << "Enter the first number: ";
cin >> a;
cout << "Enter the second number: ";
cin >> b;

cout <<endl<< "---Before swapping ---" << endl;
cout << "Value of a: " << a << endl;
cout << "Value of b: " << b << endl;

swap(a, b);

cout <<endl<< "---After swapping ---" << endl;
cout << "Value of a: " << a << endl;
cout << "Value of b: " << b << endl;
cout << "Original variables have been swapped." << endl;

return 0;
}

/* output 
Enter the first number: 12
Enter the second number: 45

---Before swapping ---
Value of a: 12
Value of b: 45

---After swapping ---
Value of a: 45
Value of b: 12
Original variables have been swapped.
